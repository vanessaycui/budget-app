<%- include("../partials/header.ejs")%>
<div class="entry-show-page">
    <div class="show-header">
        <h1> Entries for <%=category.name%> category:</h1>
        <button id="settings-category">settings</button>
    </div>
    <!-- overlay for editing categories -->
    <div id="cat-settings-form" class="form-overlay" style="display:none" >
        <div>
        <table>
            <form action="/dashboards/<%=dashboard.id%>/categories/<%=category.id%>?_method=PUT" method="POST">            <tr>
            <tr>
           
                <td>
                    <label>Edit Category Name:</label>
                    <input type="text" name="name" value=<%=category.name%>>
                </td>
                <td><button type="submit">Edit</button></td>
            </tr>
            </form>
            <form action="/dashboards/<%=dashboard.id%>/categories/<%=category.id%>?_method=DELETE" method="POST">
            <tr>
             
                <td><label> I want to delete this category:</label></td>
                <td><button type="submit">delete</button></td>
            </tr>
            </form>
            <tr>
     
                <td></td>
                <td><button class="cancel-edit">cancel</button></td>
            </tr>
        </table>
        </div>
    </div>

    <div class="show-entries">
        <table class="show-table">
            <thead>
                <td>Date</td>
                <td>Company</td>
                <td>Cost</td>
                <td>Comments</td>
            </thead>
            <%let today = new Date()%>
            <%results.forEach(entry=>{%>
                <tr>
                    <td><p><%=entry.date.toISOString().slice(0,10)%></p></td>
                    <td><p><%=entry.company%></p></td>
                    <td><p>$<%=entry.cost.toFixed(2)%></p></td>
                    <td><p><%=entry.comment%></p></td>
                    <td>
                        <form action="/entries/<%=entry.id%>/categories/<%=category.id%>?_method=DELETE" method="POST">
                            <button type="submit">delete</button>
                        </form>
                    </td>
                    <td>
                        <a class="edit-btn" id="<%=entry.id%>">edit</a>

                        <div id="form-<%=entry.id%>" style="display:none" >
                            <form action="/entries/<%=entry.id%>/categories/<%=category.id%>?_method=PUT" method="POST">
                                <table>
                                    <tr>
                                      <td><label for="company">Company:</label></td>
                                      <td><input type="text" name="company" value=<%=entry.company%>></td>
                                    </tr>
                                    <tr>
                                      <td><label for="date">Date:</label></td>
                                      <td><input type="date" name="date" value=<%=today.toISOString().slice(0,10)%>></td>
                                    </tr>
                                    <tr>
                                      <td><label for="cost" required>Amount:</label></td>
                                      <td><input type="text" name="cost" value=<%=entry.cost%>></td>
                                    </tr>
                                    <tr>
                                      <td><label for="comment">Comments:</label></td>
                                      <td> <input type="text" name="comment" value=<%=entry.comment%>></td>
                                    </tr>
                                    <tr>
                                      <td><label for="person">Member:</label></td>
                                      <td><input type="text" name="person" value=<%=entry.comment%>></td>
                                    </tr>
                                    <tr>
                                     
                                      <td><button type="submit">done</button></td>
                          
                                    </tr>
                                  </table>
                             
                            </form>
                            <button class="cancel-edit">cancel</button>
                        </div>
                    </td>
                    
                </tr>
                
            <%})%>
        </table>
   
    </div>
    
</div>
    <script src="/javascripts/category.js"></script>
<%- include("../partials/footer.ejs")%>